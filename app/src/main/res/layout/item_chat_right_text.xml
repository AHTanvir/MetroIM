<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="vertical"
    android:padding="5dp">
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_text"
        android:layout_toEndOf="@+id/tv_text"
        android:layout_toRightOf="@+id/tv_text"
        android:layout_gravity="top|center"
        android:layout_marginRight="10dp"
        android:text="rightDate"
        android:textColor="#343434"
        android:textSize="12sp" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="test"
            android:minWidth="100dp"
            android:background="@drawable/chat_item_right_normal"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="16sp" />
        <ProgressBar
            android:id="@+id/simpleProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:max="60"
            android:progress="0"
            android:background="@drawable/custom_progressbar" />
        <TextView
            android:id="@+id/dateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_alignRight="@+id/tv_text"
            android:layout_alignBottom="@+id/tv_text"
            android:text="Date"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="11sp"/>
    </RelativeLayout>
</LinearLayout>