<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chat_scren"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="#2196F3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/toolbar_backbutton"
            android:background="@drawable/left_arrow"
            android:layout_width="15dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:layout_gravity="left"
            android:layout_alignParentLeft="true"
            android:foregroundGravity="left"
            android:gravity="left" />
        <ImageView
            android:id="@+id/toolbar_imageView"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:scaleType="fitCenter"
            android:layout_gravity="left"
            android:layout_alignParentLeft="true"
            android:foregroundGravity="left"
            android:gravity="left"
            app:layout_scrollFlags="scroll|enterAlways"
            />
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/lv_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stackFromBottom="true"
            android:transcriptMode="disabled">
        </ListView>
        <ProgressBar
            android:id="@+id/simpleProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_centerInParent="true"
            android:background="@drawable/custom_progressbar" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/media_attach_menu_reveal" />
        </FrameLayout>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_contactBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            app:backgroundTint="@color/colorPrimary"
            android:visibility="gone"
            android:src="@drawable/ic_person_add_black_24dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/Chat_edit_text"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/chat_item_right_normal"
            android:textColor="#009999" />
        <Button
            android:id="@+id/Chat_send_button"
            android:layout_width="60dp"
            android:layout_height="62dp"
            android:background="@drawable/sendbtn"
            android:layout_marginRight="5dp"/>
    </LinearLayout>
</LinearLayout>