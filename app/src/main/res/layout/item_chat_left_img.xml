<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp" >
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_text"
        android:layout_toEndOf="@+id/tv_text"
        android:layout_toRightOf="@+id/tv_text"
        android:layout_gravity="top|center"
        android:layout_marginLeft="10dp"
        android:text="leftDate"
        android:textColor="#343434"
        android:textSize="12sp" />
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:gravity="left">
       <ImageView
           android:id="@+id/iv_img"
           android:layout_width="250dp"
           android:layout_height="match_parent"
           android:scaleType="centerInside"
           android:adjustViewBounds="true"
           />
       <ProgressBar
           android:id="@+id/simpleProgressBar"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:visibility="gone"
           android:layout_centerInParent="true"
           android:indeterminate="true"
           android:max="60"
           android:progress="0"
           android:background="@drawable/custom_progressbar" />
       <ImageView
           android:layout_width="20dp"
           android:layout_height="15dp"
           android:id="@+id/send_status"
           android:layout_alignParentBottom="true"
           android:layout_alignRight="@+id/iv_img"/>
   </RelativeLayout>
    <TextView
        android:id="@+id/dateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_img"
        android:layout_toEndOf="@+id/iv_img"
        android:layout_toRightOf="@+id/iv_img"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="10dp"
        android:text="leftDate"
        android:textColor="#343434"
        android:textSize="12sp" />

</LinearLayout>